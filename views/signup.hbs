<div class="blur">
    <div class='main'>
        <h2>Please Sign Up</h2>

        <form action="/submit" method="post">
            <label for="fname">first name <sup>*</sup></label>
            <input type='text' name='fname' pattern="[A-Za-z]" required/>

            <label for="lname">last name <sup>*</sup></label>
            <input type='text' name='lname' pattern="[A-Za-z]" required/>

            <label for="email">email address <sup>*</sup></label>
            <input type='email' name='email' required/>

            <label for="password">password <sup>*</sup></label>
            <input type='password' name='password' pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number, one uppercase letter, one lowercase letter, and at least 8 or more characters" required/>

            <label for="confirm">confirm password <sup>*</sup></label>
            <input type='password' name='confirm' required/>

            <button class="action-btn">Submit</button>
        </form>
    </div>
</div>
